.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: white;
  display: flex;
  box-shadow: 0 0px 10px 0px rgba(0, 0, 0, 0.08);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  font-size:30rpx;
}

.active{
  background-color: rgba(230, 230, 250, 0.7);
  color: tomato;
}

.tab-bar-item .cover-image {
  width: 27px;
  height: 27px;
}

